<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_move_writeoff" model="ir.ui.view">
            <field name="name">account.write.off.form</field>
            <field name="model">account.write.off</field>
            <field name="arch" type="xml">
                <form string="Account Write Off">
                    <group>
                        <field name="account_id" />
                        <field name="account_move_id" />
                    </group>

                    <footer>
                        <button string='Write off' name="action_writeoff_moves" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
               </form>
            </field>
        </record>

        <record id="action_view_account_move_writeoff" model="ir.actions.act_window">
            <field name="name">Write off</field>
            <field name="res_model">account.write.off</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_account_move_writeoff"/>
            <field name="target">new</field>
            <field name="binding_model_id" ref="account.model_account_move" />
            <field name="binding_view_types">list</field>
        </record>
    </data>
</odoo>
